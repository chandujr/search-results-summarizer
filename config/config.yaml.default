# Search engine configuration
# Options: "searxng" or "4get"
ENGINE_NAME: searxng

# URL of your search engine instance
# You may not be able to use "localhost" here, use either:
# 1. Your host machine's IP: ip route get 1.1.1.1 | awk '{print $7}'
# 2. OR, the Docker network gateway IP, e.g.,: docker network inspect search-results-summarizer_default | grep Gateway
# 3. Set the port number as per the engine
ENGINE_URL: http://192.168.1.100:8888

# AI model configuration
# AI model to use for summarization
# Find available models at: https://openrouter.ai/models
OPENROUTER_MODEL: mistralai/devstral-2512:free

# Feature settings

# Number of search results to summarize
MAX_RESULTS_FOR_SUMMARY: 7

# Server configuration
# Port for the application to listen on
PORT: 3000

# Host address for the application
# Use 0.0.0.0 to listen on all network interfaces
HOST: 0.0.0.0

# Performance settings
# Rate limit in milliseconds between requests (to avoid spam)
RATE_LIMIT_MS: 1000

# Maximum tokens for AI responses
MAX_TOKENS: 750

# Summarization thresholds
# Minimum number of keywords required in a search query to generate a summary
MIN_KEYWORD_COUNT: 3

# Minimum number of search results required to generate a summary
MIN_RESULT_COUNT: 3

# Summarization filters
# Words in search queries that prevent summarization
EXCLUDE_WORDS:
  - "github"
  - "gitlab"
  - "download"
  - "repository"
  - "repo"
  - "link"
  - "url"
  - "tool"
  - "software"
  - "app"
  - "library"
  - "framework"

# Words that override the exclude list and force summarization
EXCLUDE_OVERRIDES:
  - "what"
  - "why"
  - "how"
  - "when"
  - "where"
  - "who"
  - "which"
  - "can"
  - "will"
  - "would"
  - "could"
  - "should"
  - "is"
  - "are"
  - "was"
  - "were"
  - "do"
  - "does"
  - "did"
  - "example"
  - "explain"
  - "simplify"
  - "eli5"
